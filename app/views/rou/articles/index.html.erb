<div class="main-content">
  <div class="breadcrumbs" id="breadcrumbs">
    <script type="text/javascript">
      try {
        ace.settings.check('breadcrumbs', 'fixed')
      } catch (e) {
      }
    </script>

    <ul class="breadcrumb">
      <li>
        <i class="icon-home home-icon"></i>
        <a href="<%= rou_root_url %>">Home</a>
      </li>
      <li class="active">Article</li>
    </ul>
    <!-- .breadcrumb -->

    <!-- #nav-search -->
  </div>

  <div class="page-content">

    <div class="row">
      <div class="col-xs-12">
        <!-- PAGE CONTENT BEGINS -->

        <div class="row">
          <div class="col-sm-12 widget-container-span">
            <div class="widget-box">
              <div class="widget-header widget-hea1der-small header-color-dark">
                <h6><%= @web_title %></h6>
                <div class="widget-toolbar">
                  <%= link_to '新增', new_rou_article_path,:style => 'color:wite' %>
                </div>
              </div>
              <div class="table-responsive">
                <table id="sample-table-1" class="table table-striped table-bordered table-hover">
                  <thead>
                  <tr>
                    <th class="center">
                      <label>
                        <input type="checkbox" class="ace">
                        <span class="lbl"></span>
                      </label>
                    </th>
                    <th>ID</th>
                    <th>标题</th>
                    <th class="hidden-480">简介</th>
                    <th class="hidden-480">类别</th>
                    <th>
                      <i class="icon-time bigger-110 hidden-480"></i>
                      创建时间
                    </th>
                    <th>操作</th>
                  </tr>
                  </thead>

                  <tbody>
                  <% @articles.each do |article| %>
                  <tr class="">
                    <td class="center">
                      <label>
                        <input type="checkbox" class="ace">
                        <span class="lbl"></span>
                      </label>
                    </td>

                    <td>
                      <%= article.id %>
                    </td>
                    <td><%= article.title %></td>
                    <td class="hidden-480"><%= article.introduce[0..10]%>...</td>
                    <td><%= article.try(:category).try(:name) %></td>
                    <td class="hidden-480">
                      <span class="label label-sm label-warning"><%= article.created_at.strftime('%Y-%m-%d') %></span>
                    </td>

                    <td>
                      <div class="visible-md visible-lg hidden-sm hidden-xs btn-group">
                        <%= link_to rou_article_path(article),:class => 'btn btn-xs btn-success' do  %>
                          <i class=" icon-comment-alt bigger-120"></i>
                        <% end %>

                        <%= link_to edit_rou_article_path(article),:class => 'btn btn-xs btn-info' do  %>
                          <i class="icon-edit bigger-120"></i>
                        <% end %>

                        <%= link_to rou_article_path(article),:method => :delete,:confirm =>'确定要删除么?',:class => 'btn btn-xs btn-danger' do  %>
                          <i class="icon-trash bigger-120"></i>
                        <% end %>

                      </div>

                    </td>
                  </tr>
                  <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
              <div class="digg_pagination">
                <%= will_paginate @articles,:previous_label => '<<上一页', :next_label => '下一页>>'  %>
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

    <div class="space-24"></div>

  </div>
  <!-- /.col -->
</div><!-- /.row -->



